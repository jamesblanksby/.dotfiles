#!/usr/bin/env bash

# Prevent sudo ignoring aliases
alias sudo="sudo"

# Super list
alias l="ls -hlp --color"

# Super list all
alias la="ls -ahlp --color"

# Directory list
alias ld="ls -dhl --color */"

# Alias native list as super list
alias ls="l"

# Quick edit hosts
alias hosts="sudo nano /etc/hosts"

# Execute gulp in silent mode
alias gulp="[[ $(uname) == \"Darwin\" ]] && gulp --silent"

# Print each PATH entry on a separate line
alias path="echo -e \"${PATH//:/\\n}\""
