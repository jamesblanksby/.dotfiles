    password=$password${ANIMAL[($RANDOM % ${#ANIMAL[@]})]}
else
    password=$password${FOOD[($RANDOM % ${#FOOD[@]})]}
fi

echo "$password" | tr -d "\n" | pbcopy && pbpaste && echo
